<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vovatkach2427gmail.houseenergyoptimization.Fragment.ItemResultFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorBlueGray900">

        <TextView
            android:id="@+id/tvOptimizationCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOptimizationPriority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:textAlignment="center" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvResultOptimization"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
